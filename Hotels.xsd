<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           elementFormDefault="qualified">

  <!-- Root element: Hotels -->
  <xsd:element name="Hotels">
    <xsd:complexType>
      <xsd:sequence>
        <!-- Multiple Hotel elements allowed -->
        <xsd:element name="Hotel" maxOccurs="unbounded">
          <xsd:complexType>
            <xsd:sequence>
              <!-- Hotel Name is required -->
              <xsd:element name="Name" type="xs:string" />

              <!-- One or more Phone elements -->
              <xsd:element name="Phone" type="xs:string" maxOccurs="unbounded" />

              <!-- Address element with required attribute "NearstAirport" -->
              <xsd:element name="Address">
                <xsd:complexType>
                  <xsd:sequence>
                    <xsd:element name="Number" type="xs:integer" />
                    <xsd:element name="Street" type="xs:string" />
                    <xsd:element name="City" type="xs:string" />
                    <xsd:element name="State" type="xs:string" />
                    <xsd:element name="Zip" type="xs:integer" />
                  </xsd:sequence>
                  <xsd:attribute name="NearstAirport" type="xs:string" use="required" />
                </xsd:complexType>
              </xsd:element>
            </xsd:sequence>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element>

</xsd:schema>
